{
  "name": "@cms/root",
  "type": "module",
  "workspaces": [
    "apps/*",
    "db"
  ],
  "scripts": {
    "dev:api": "npm run dev --workspace=@cms/api",
    "build": "vite build",
    "preview": "$npm_execpath run build && vite preview",
    "db:generate": "npm run db:generate --workspace=@cms/db",
    "db:migrate": "npm run db:migrate --workspace=@cms/db",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen:api": "npm run cf-typegen --workspace=@cms/api"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "vite": "~7.3.0",
    "vite-ssr-components": "^0.5.1",
    "wrangler": "^4.54.0"
  }
}
