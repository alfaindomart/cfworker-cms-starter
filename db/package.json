{
  "name": "@cms/db",
  "type": "module",
  "scripts": {
    "db:generate-dev": "drizzle-kit generate --config=drizzle-dev.config.ts",
    "db:migrate-dev": "drizzle-kit migrate --config=drizzle-dev.config.ts",
    "db:generate-prod": "drizzle-kit generate --config=drizzle-prod.config.ts",
    "db:migrate-prod": "drizzle-kit migrate --config=drizzle-prod.config.ts",
    "deploy": "$npm_execpath run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:seed": "tsx seed.ts"
  },
  "dependencies": {
    "@cms/api": "workspace:*",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "drizzle-seed": "^0.3.1",
    "postgres": "^3.4.8"
  },
  "devDependencies": {
    "@cloudflare/vite-plugin": "^1.2.3",
    "@types/node": "^24.10.1",
    "drizzle-kit": "^0.31.8",
    "typescript": "^5.9.3"
  }
}
